<fx:root minHeight="870.0" minWidth="800.0" onCloseRequest="#handleExit" title="iGrad" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/iGrad_Shibu.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
            </stylesheets>

            <VBox minHeight="560.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2a2a2a;">

                <StackPane fx:id="statusBarPlaceholder" styleClass="status-bar" />
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="800.0" prefWidth="800.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                    <children>
                  <VBox maxWidth="1.7976931348623157E308" minHeight="550.0" prefWidth="300.0">
                     <children>
                        <VBox fx:id="capPanelPlaceholder" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefWidth="300.0" />
                        <VBox fx:id="commandReceivedPanel" prefWidth="100.0" styleClass="progress_panel">
                           <children>
                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="-Infinity" prefHeight="60.0" vgrow="ALWAYS" />
                                </rowConstraints>
                                 <children>
                                    <Label style="-fx-font-size: 24; -fx-text-fill: #FF7A2F;" text="Command Received" />
                                    <Label fx:id="commandReceived" maxWidth="1.7976931348623157E308" prefHeight="50.0" styleClass="command-received" wrapText="true" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                                       <GridPane.margin>
                                          <Insets />
                                       </GridPane.margin>
                                       <padding>
                                          <Insets left="10.0" right="10.0" />
                                       </padding>
                                    </Label>
                                 </children>
                              </GridPane>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                     <HBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </HBox.margin>
                  </VBox>

                        <VBox fx:id="moduleList" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
                            <children>
<!--                                <StackPane fx:id="moduleListPanelPlaceholder" alignment="CENTER_RIGHT"
                                           maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                           VBox.vgrow="ALWAYS"/>
                                <StackPane fx:id="avatarSelectionPanelPlaceholder" alignment="CENTER_RIGHT"
                                           maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                           VBox.vgrow="ALWAYS"/>-->
                            </children>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                        </VBox>
                    </children>
                </HBox>

                <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="150.0" style="-fx-background-color: #2a2a2a;" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding></StackPane>

                <StackPane fx:id="commandBoxPlaceholder" minHeight="60.0" styleClass="pane-with-border" VBox.vgrow="NEVER">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="5.0" />
                    </padding>
                </StackPane>

            </VBox>
        </Scene>
    </scene>

</fx:root>
