<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="650" onCloseRequest="#handleExit" title="iGrad" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/iGrad_Shibu.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>

        <StackPane fx:id="statusBar" styleClass="status-bar" />
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="400.0" prefWidth="400.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
               <children>
                  <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="500.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox maxHeight="-Infinity">
                           <children>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                              <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/module.png" />
                                 </image>
                              </ImageView>
                              <Label fx:id="mcCount" alignment="CENTER" contentDisplay="RIGHT" minWidth="100.0" prefWidth="100.0" style="-fx-translate-y: 65; -fx-font-size: 24; -fx-text-fill: white; -fx-font-family: AkzidenzGrotesk;" styleClass="mc-Label" textFill="WHITE">
                                 <font>
                                    <Font name="Calibri Bold" size="23.0" />
                                 </font>
                              </Label>
                              <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Region maxHeight="-Infinity" prefHeight="1.0" style="-fx-border-color: #3d3d3d;" />
                        <ListView maxHeight="1.7976931348623157E308" style="-fx-background-color: #2d2d2d;" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <Region maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="1.0" style="-fx-border-color: #3d3d3d;">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin></Region>
      
                                                        <VBox fx:id="moduleList" alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" minWidth="200.0" prefWidth="200.0" styleClass="pane-with-border" HBox.hgrow="ALWAYS">
                     <children>
                   <StackPane fx:id="moduleListPanelPlaceholder" alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
              </VBox>
               </children>
            </HBox>

                    <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border">
        </StackPane>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

      </VBox>
    </Scene>
  </scene>

</fx:root>
