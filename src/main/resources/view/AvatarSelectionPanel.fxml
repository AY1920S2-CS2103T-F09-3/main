<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1">
    <StackPane>
        <children>
            <Label fx:id="avatarLabel" alignment="TOP_CENTER" style="-fx-font-size: 60;" textFill="WHITE"
                   StackPane.alignment="TOP_CENTER">
                <font>
                    <Font name="Calibri" size="40.0"/>
                </font>
            </Label>
            <HBox alignment="BOTTOM_CENTER">
                <children>
                    <Region/>
                    <GridPane fx:id="avatarGridPane" alignment="CENTER" hgap="100.0" stylesheets="@DarkTheme.css"
                              vgap="50.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </GridPane>
                    <Region/>
                </children>
                <padding>
                    <Insets top="100.0"/>
                </padding>
            </HBox>
        </children>
        <padding>
            <Insets top="100.0"/>
        </padding>
    </StackPane>
</VBox>
